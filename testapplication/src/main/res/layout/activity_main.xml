<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <Button
        android:id="@+id/button_tooltip_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="bottomToolTipDialogBox"
        android:text="ToolTip Bottom" />

    <Button
        android:id="@+id/button_tooltip_right_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_tooltip_bottom"
        android:onClick="rightToolTipPopupWindow"
        android:text="Right Side" />

    <Button
        android:id="@+id/button_tooltip_left_side"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/button_tooltip_right_side"
        android:onClick="leftToolTipPopupWindow"
        android:text="Left Side" />

</RelativeLayout>