<resources>

    <style name="BaseDarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark.color_primary</item>
        <item name="colorPrimaryDark">@color/dark.color_primary_dark</item>
        <item name="colorAccent">@color/dark.color_accent</item>

        <item name="tabBackground">@drawable/drawer_tab_item_dark_background</item>
        <item name="listItemBackground">@drawable/gray_selectable_item_background</item>
        <item name="highlightBackground">#545454</item>
        <item name="toolbarIconNormalColor">#ffffff</item>
        <item name="toolbarIconDisabledColor">#50ffffff</item>
        <item name="menuIconNormalColor">#829294</item>

        <item name="imageTintColor">#FFFFFF</item>
    </style>

    <style name="BaseLightTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/light.color_primary</item>
        <item name="colorPrimaryDark">@color/light.color_primary_dark</item>
        <item name="colorAccent">@color/light.color_accent</item>

        <item name="tabBackground">@drawable/drawer_tab_item_dark_background</item>
        <item name="listItemBackground">@drawable/gray_selectable_item_background</item>
        <item name="highlightBackground">#545454</item>
        <item name="toolbarIconNormalColor">#ffffff</item>
        <item name="toolbarIconDisabledColor">#50ffffff</item>
        <item name="menuIconNormalColor">#829294</item>

        <item name="imageTintColor">#000</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark" parent="BaseDarkTheme"></style>

    <style name="AppThemeLight" parent="BaseLightTheme"></style>


    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>


</resources>


