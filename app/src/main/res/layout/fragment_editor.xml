<com.duy.pascal.frontend.view.LockableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vertical_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <com.duy.pascal.frontend.view.code_view.CodeView
        android:id="@+id/code_editor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dropDownAnchor="@+id/app_bar"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top|start"
        android:hint="@string/write_code_here"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textMultiLine|textNoSuggestions"
        />

</com.duy.pascal.frontend.view.LockableScrollView>
